<Window x:Class="LiveWallpaperApp.UI.StreamInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить стрим" Height="250" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Border Style="{StaticResource ModernCard}">
        <StackPanel Margin="30">
            <TextBlock Text="Введите URL стрима" FontSize="18" FontWeight="Bold" 
                      Margin="0,0,0,20" Foreground="#333"/>

            <TextBlock Text="Поддерживаемые форматы: RTMP, HLS, HTTP streams" 
                      FontSize="12" Foreground="#666" Margin="0,0,0,15"/>

            <TextBox Name="StreamUrlTextBox" Height="30" FontSize="14" 
                    VerticalContentAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Text="Примеры:" FontSize="12" FontWeight="Bold" 
                      Foreground="#666" Margin="0,10,0,5"/>

            <TextBlock Text="• https://example.com/stream.m3u8" FontSize="11" 
                      Foreground="#999" Margin="0,2"/>

            <TextBlock Text="• rtmp://live.twitch.tv/live/STREAM_KEY" FontSize="11" 
                      Foreground="#999" Margin="0,2"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                       Margin="0,30,0,0">
                <Button Name="OkButton" Content="ОК" Style="{StaticResource ModernButton}"
                       Click="Ok_Click" IsDefault="True"/>
                <Button Name="CancelButton" Content="Отмена" Style="{StaticResource ModernButton}"
                       Background="#757575" Click="Cancel_Click" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>