<Window x:Class="LiveWallpaperApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Live Wallpaper Manager" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="Linear
        LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
        <Window.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="1"/>
            </LinearGradientBrush>
        </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Style="{StaticResource ModernCard}" Margin="20,20,20,10">
            <StackPanel Orientation="Horizontal" Margin="20">
                <TextBlock Text="🎨" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Live Wallpaper Manager" FontSize="24" FontWeight="Bold" 
                          Foreground="#333" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <Border Grid.Row="1" Style="{StaticResource ModernCard}">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Панель управления -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="Импорт медиа" FontSize="18" FontWeight="Bold" 
                              Foreground="#333" Margin="0,0,0,15"/>
                    
                    <Button Name="ImportImageBtn" Content="📷 Изображение" 
                           Style="{StaticResource ModernButton}" Click="ImportImage_Click"/>
                    
                    <Button Name="ImportVideoBtn" Content="🎬 Видео" 
                           Style="{StaticResource ModernButton}" Click="ImportVideo_Click"/>
                    
                    <Button Name="ImportGifBtn" Content="🎞️ GIF" 
                           Style="{StaticResource ModernButton}" Click="ImportGif_Click"/>
                    
                    <Button Name="ImportStreamBtn" Content="📺 Стрим" 
                           Style="{StaticResource ModernButton}" Click="ImportStream_Click"/>

                    <Separator Margin="0,20"/>

                    <TextBlock Text="Настройки" FontSize="18" FontWeight="Bold" 
                              Foreground="#333" Margin="0,0,0,15"/>
                    
                    <CheckBox Name="LoopPlayback" Content="Зацикленное воспроизведение" 
                             IsChecked="True" Margin="0,5"/>
                    
                    <CheckBox Name="MuteAudio" Content="Отключить звук" 
                             IsChecked="True" Margin="0,5"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Качество:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Name="QualityCombo" SelectedIndex="1" Width="100">
                            <ComboBoxItem Content="Низкое"/>
                            <ComboBoxItem Content="Среднее"/>
                            <ComboBoxItem Content="Высокое"/>
                        </ComboBox>
                    </StackPanel>

                    <Separator Margin="0,20"/>

                    <Button Name="SetWallpaperBtn" Content="🖼️ Установить обои" 
                           Style="{StaticResource ModernButton}" Background="#4CAF50" 
                           Click="SetWallpaper_Click" IsEnabled="False"/>
                    
                    <Button Name="RemoveWallpaperBtn" Content="🗑️ Удалить обои" 
                           Style="{StaticResource ModernButton}" Background="#F44336" 
                           Click="RemoveWallpaper_Click" Margin="5,5,5,0"/>
                </StackPanel>

                <!-- Область предварительного просмотра -->
                <Border Grid.Column="1" Background="#F5F5F5" CornerRadius="8">
                    <Grid>
                        <TextBlock Name="PreviewPlaceholder" Text="Выберите медиа для предварительного просмотра" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center" 
                                  FontSize="16" Foreground="#999"/>
                        
                        <MediaElement Name="MediaPreview" Stretch="Uniform" 
                                     LoadedBehavior="Manual" UnloadedBehavior="Close" 
                                     Visibility="Collapsed"/>
                        
                        <Image Name="ImagePreview" Stretch="Uniform" Visibility="Collapsed"/>
                        
                        <WebBrowser Name="StreamPreview" Visibility="Collapsed"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Статусная строка -->
        <Border Grid.Row="2" Style="{StaticResource ModernCard}" Margin="20,10,20,20">
            <StackPanel Orientation="Horizontal" Margin="20,10">
                <TextBlock Name="StatusText" Text="Готов к работе" Foreground="#666"/>
                <ProgressBar Name="ProgressBar" Width="200" Height="4" Margin="20,0,0,0" 
                            Visibility="Collapsed"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>